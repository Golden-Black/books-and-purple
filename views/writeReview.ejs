<%- include("./partials/headers") -%>
<div class="container">
<h1 class="entries">Share Your Thoughts on a Book!</h1>

<form action="/compose" method="POST">
    
    <div class="form-group">
        <div class="entries"><lable>Title</lable></div>
        <input type="text" name="bookTitle" class="form-control" required>
        <div class="entries"><lable>Author</lable></div>
        <input type="text" name="bookAuthor" class="form-control" required>
        <div class="entries"><lable>ISBN Number</lable></div>
        <input type="text" name="bookISBN" class="form-control">
        <div class="entries"><lable>Image</lable></div>
        <input type="image" name="bookImage" class="form-control">
        <label class="entries">What's something you want to talk about this book?</label>
        <textarea name="bookReview" rows="5" class="form-control" required></textarea>
    </div>

    <div class="publish">
        <button class="btn btn-primary" type="submit" name="button">Submit</button>
    </div>
</form>
</div>
<%- include("./partials/register-footer") -%>