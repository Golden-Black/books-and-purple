<%- include("./partials/register-header") -%>

<body class="login-backgd">
    <div class="modal position-static d-block py-5" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-5 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                    <h2 class="fw-bold mb-0">Logging in</h2>
                    <a href="/signup"><label data-bs-dismiss="modal">Sign Up</label></a>
                </div>

                <div class="modal-body p-5 pt-0">
                    <form class="" action="/login" method="POST">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control rounded-4" id="floatingInput"
                                placeholder="Your Username" name="username">
                            <label for="floatingInput">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-4" id="floatingPassword"
                                placeholder="Password" name="password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Log In</button>
                        <a href="/forgotPassword" class="text-muted">Forgot Password?</a>
                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/register-footer") -%>