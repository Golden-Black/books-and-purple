                            <%= postings[item].isbnType %> : <%= postings[item].isbn %>
                        </div>
                        <div>
                            <p><span class="review-username">
                                <%= postings[item].userPost[postings[item].userPost.length-1].username %>
                            </span> • 
                            <span class="card-meta"><%= postings[item].userPost[postings[item].userPost.length-1].date %> </span></p>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <img src="/img/icons/eye.png" alt="Views Count" height="24"> <%= viewsCount %>
                                </div>
                                <div class="col order-1">
                                    <img src="/img/icons/thumbs-up.png" alt="Like" height="24"> 0
                                </div>
