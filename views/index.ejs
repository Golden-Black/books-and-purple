            <% if(item % 2 === 0){ %>
            <div class="col-md-4-s order-lg-first order-sm-1">
                <article class="card mb-4">
                    <header class="card-header">
                        <a style="color: black; background-color: rgb(238, 206, 102); border: 2px rgb(238, 206, 102) solid; 
                        border-radius: 12px;" href="#">&nbsp; <%= postings[item].title %> <span class="by">by</span>
                            <%= postings[item].authors %> &nbsp;</a>
                    </header>
                    <a href="post-image.html">
                        <img class="card-img" src="<%= postings[item].imageLink %>" alt="" />
                    </a>
                    <div class="card-body">
                        <div>
                            <a href="post-image.html">
                                <!-- postings[item].userPost[postings[item].userPost.length-1] Displaying Latest Post -->
                                <h4 class="card-title"> <%= postings[item].userPost[postings[item].userPost.length-1].reviewTitle %> </h4>
                            </a>
                        </div>
                        <p class="card-text"> > <%= postings[item].userPost[postings[item].userPost.length-1].review.substring(0, 165) %> ... <a href="/<%= postings[item]._id %>" class="index-readMore">&nbsp;Read More&nbsp;</a> </p>
